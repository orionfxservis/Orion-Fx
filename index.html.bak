	/* üî• Unified Button Style */
.btn,
.menu-btn,
#goTopBtn,
.contact-form button {
  background: linear-gradient(90deg, #00c3ff, #7a00ff);
  color: #fff;
  border: none;
  padding: 12px 18px;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  box-shadow: 0 0 15px rgba(0,195,255,0.4), 0 0 25px rgba(122,0,255,0.4);
}

/* Hover effect matches nav glow */
.btn:hover,
.menu-btn:hover,
#goTopBtn:hover,
.contact-form button:hover,
.nav-menu li a:hover {
  background: linear-gradient(90deg, #00c3ff, #7a00ff);
  color: #fff;
  text-shadow: 0 0 10px #00c3ff, 0 0 20px #7a00ff;
  box-shadow: 0 0 25px #00c3ff, 0 0 25px #7a00ff;
  transform: translateY(-2px);
}



/* Go To Top Button */
#goTopBtn {
  position: fixed;  /* ‚úÖ fixes position relative to viewport */
  bottom: 25px;
  right: 25px;
  z-index: 1000;
  display: none;
  background: #00c3ff, #7a00ff;
  color: white;
  border: none;
  padding: 12px 16px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.3s ease;
}

#goTopBtn:hover {
  background: ##00c3ff, #7a00ff;
  box-shadow: 0 0 25px #00c3ff;
}

/* ‚úÖ Project Thumbnails */
.project-thumb {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 12px;
  margin-bottom: 14px;
  transition: transform 0.4s ease, box-shadow 0.4s ease;
  box-shadow: 0 0 12px rgba(0,195,255,0.35);
}

.card:hover .project-thumb {
  transform: scale(1.03);
  box-shadow: 0 0 20px rgba(0,195,255,0.6),
              0 0 30px rgba(122,0,255,0.5);
}

/* ‚úÖ Project Link Button */
.project-link {
  display: inline-block;
  margin-top: 12px;
  font-weight: 600;
  color: #00e5ff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.project-link:hover {
  text-shadow: 0 0 10px #00e5ff, 0 0 20px #7a00ff;
  transform: translateX(4px);
}

/* Neon ambient overlay */
.projects-neon-overlay {
  position: absolute;
  inset: 0;
  z-index: 0;
  pointer-events: none;
  background:
    radial-gradient(circle at 20% 30%, rgba(0,229,255,0.08), transparent 40%),
    radial-gradient(circle at 80% 70%, rgba(178,108,255,0.08), transparent 40%);
  mix-blend-mode: screen;
  animation: neonMove 20s linear infinite;
}

/* Slow ambient movement */
@keyframes neonMove {
  0%   { transform: translate(0px,0px) rotate(0deg);}
  25%  { transform: translate(10px,-10px) rotate(45deg);}
  50%  { transform: translate(-10px,10px) rotate(90deg);}
  75%  { transform: translate(5px,-5px) rotate(135deg);}
  100% { transform: translate(0px,0px) rotate(360deg);}
}

/* ‚úÖ Uniform alignment for all section headings */
section h2 {
  text-align: left;       /* Align all headings to the left */
  margin-left: 0;         /* Remove any unintended offsets */
  margin-right: 0;
  padding: 0;             /* Ensure no extra padding affects alignment */
}

